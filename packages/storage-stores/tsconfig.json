{
	"compilerOptions": {
		"target": "es2015",
		"module": "CommonJS",
		"jsx": "preserve",
		"declaration": true,
		"declarationDir": "./",
		"isolatedModules": true,
		"strict": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"outDir": "./",
		"baseUrl": "./"
	},
	"include": ["./src/**/*"],
	"exclude": ["node_modules", "./__tests__/**/*", "**/*.test.(j|t)sx?"]
}
