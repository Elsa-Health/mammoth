{
	"compilerOptions": {
		"target": "esnext",
		"jsx": "preserve",
		"noEmit": true,
		"declaration": true,
		"declarationDir": "./",
		"isolatedModules": true,
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": false,
		"resolveJsonModule": true,
		"outDir": "./dist"
	},
	"exclude": ["node_modules", "./__tests__/**/*", "**/*.test.(j|t)sx?"],
	"extends": "tsconfig/base.json",
	"include": ["./src/*"]
}
