{
	"compilerOptions": {
		"target": "esnext",
		"module": "ES2015",
		"jsx": "react-native",
		"noEmit": true,
		"declaration": true,
		"isolatedModules": true,
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"outDir": "./"
	},
	"exclude": ["node_modules", "./__tests__/**/*", "**/*.test.(j|t)sx?"],
	"extends": "tsconfig/base.json",
	"include": ["./src/*"]
}
