{
	"compilerOptions": {
		"target": "esnext",
		"module": "CommonJS",
		"jsx": "react-native",
		"declaration": true,
		"isolatedModules": true,
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"outDir": "./",
		"removeComments": true
	},
	"exclude": ["node_modules", "./__tests__/**/*", "**/*.test.(j|t)sx?"],
	"extends": "tsconfig/base.json",
	"include": ["./src/**/*"]
}
