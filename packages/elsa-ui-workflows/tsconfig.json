{
	"compilerOptions": {
		"target": "esnext",
		"jsx": "react-native",
		"declaration": true,
		"declarationDir": "./@types",
		"isolatedModules": true,
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"outDir": "./"
	},
	"include": ["./src/**/*"],
	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js",
		"jest.setup.js",
		"./__tests__/**/*",
		"**/*.test.js",
		"**/*.test.tsx"
	]
}
