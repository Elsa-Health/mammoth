{
	"compilerOptions": {
		"target": "esnext",
		"jsx": "react-native",
		"noEmit": true,
		"declaration": true,
		"declarationDir": "./",
		"isolatedModules": true,
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": false,
		"resolveJsonModule": true,
		"outDir": "./dist"
	},
	"include": ["@types", "./src"],
	"exclude": [
		"node_modules",
		"babel.config.js",
		"metro.config.js",
		"jest.config.js",
		"jest.setup.js"
	]
}
