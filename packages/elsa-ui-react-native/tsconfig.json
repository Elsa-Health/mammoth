{
	"compilerOptions": {
		"target": "es2017",
		"module": "es2015",
		"jsx": "react-native",
		"declaration": true,
		"declarationDir": "./",
		"isolatedModules": true,
		"strict": true,
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"outDir": "./"
	},
	"exclude": ["node_modules", "./__tests__/**/*", "**/*.test.(j|t)sx?"],
	"extends": "tsconfig/base.json",
	"include": ["./src/*"]
}
