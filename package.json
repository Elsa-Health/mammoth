{
	"name": "mammoth",
	"version": "0.0.0",
	"private": true,
	"workspaces": {
		"packages": [
			"apps/*",
			"packages/*"
		],
		"nohoist": [
			"**/mobile-providers/",
			"**/mobile-providers/**",
			"**/mobile-addo/",
			"**/mobile-addo/**",
			"**/mobile-ctc/",
			"**/mobile-ctc/**",
			"**/@elsa-ui/react-native/",
			"**/@elsa-ui/react-native/**",
			"**/@elsa-ui/utils/",
			"**/@elsa-ui/utils/**",
			"**/@elsa-ui/react-native-workflows/",
			"**/@elsa-ui/react-native-workflows/**",
			"**/react-native-elsa-ui/",
			"**/react-native-elsa-ui/**"
		]
	},
	"scripts": {
		"build": "turbo run build",
		"dev": "turbo run dev --parallel",
		"lint": "turbo run lint",
		"test": "turbo run test",
		"coverage": "turbo run coverage",
		"coverage:ci": "turbo run coverage:ci",
		"clean": "yarn clean:turbo && yarn clean:watchman",
		"clean:turbo": "turbo run clean && rm -rf node_modules && rm -rf yarn.lock",
		"clean:watchman": "watchman watch-del-all && yarn cache clean",
		"format": "prettier --write \"**/*.{ts,tsx,md}\""
	},
	"devDependencies": {
		"prettier": "^2.5.1",
		"turbo": "latest"
	},
	"engines": {
		"npm": ">=7.0.0",
		"node": ">=14.0.0"
	},
	"packageManager": "yarn@1.22.17"
}
