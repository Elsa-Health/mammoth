{
  "name": "@sourceallies/coveralls-merge",
  "version": "1.0.0",
  "description": "All in one tool for managing coverage reports for Coveralls",
  "main": "index.js",
  "scripts": {
    "build": "babel src -d lib",
    "coverage": "nyc --reporter=lcov npm test",
    "eslint": "eslint src/** test/unit/**",
    "prepublish": "npm run verify && npm run build",
    "test": "mocha",
    "verify": "npm run eslint && npm run test && echo Verify Passed!"
  },
  "keywords": [
    "coveralls"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:sourceallies/coveralls-merge.git"
  },
  "author": "Source Allies",
  "contributors": [
    "Michael Parker <mparker@sourceallies.com>"
  ],
  "license": "Apache-2.0",
  "nyc": {
    "include": [
      "src/*.js"
    ],
    "sourceMap": false,
    "instrument": false
  },
  "devDependencies": {
    "babel-cli": "^6.11.4",
    "babel-plugin-istanbul": "^2.0.0",
    "babel-preset-es2015": "^6.9.0",
    "babel-plugin-transform-object-rest-spread": "^6.8.0",
    "babel-register": "^6.11.6",
    "chai": "^3.5.0",
    "chance": "^1.0.4",
    "eslint": "^3.3.1",
    "lodash": "^4.15.0",
    "mocha": "^3.0.0",
    "nyc": "^8.1.0",
    "proxyquire": "^1.7.10",
    "sinon": "^1.17.5",
    "sinon-chai": "^2.8.0"
  },
  "dependencies": {
    "request": "^2.74.0",
    "xml2js": "^0.4.17"
  }
}
